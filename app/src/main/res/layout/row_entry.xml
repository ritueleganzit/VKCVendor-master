 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardviewsuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"

        app:cardElevation="5dp"

        app:cardUseCompatPadding="true">



        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_centerVertical="true"
                    android:paddingTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/lin_profile"
                    android:padding="5dp"
                    >

                    <TableRow android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:text="Sun Stitchhing"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/black" />


  <TextView
                            android:layout_width="0dp"
                            android:layout_weight="50"
                            android:text="102566635"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/red" />




                    </TableRow>

                    <TableRow android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="50"

                            android:text="13916 ladies Mrn "
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                             />




                    </TableRow>
                    <TableRow android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="50"

                            android:text="5L =10/100"
                            android:singleLine="true"
                            android:ellipsize="end"
                             />




                    </TableRow>

                    <TableRow android:layout_marginBottom="10dp">




                    </TableRow>



                </TableLayout>




                <ImageView
                    android:id="@+id/lin_arrow"

                    android:background="@color/colorPrimaryDark"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                   />

            </LinearLayout>


        </FrameLayout>

    </android.support.v7.widget.CardView>
